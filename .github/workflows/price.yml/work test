name: Steel Price Checker

on:
  schedule:
    - cron: "0 9 * * *"   # هر روز ساعت 9:00 UTC (12:30 به وقت ایران)
  workflow_dispatch:       # امکان اجرای دستی

jobs:
  check-prices:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: "3.9"

    - name: Install dependencies
      run: |
        pip install requests beautifulsoup4 python-telegram-bot lxml

    - name: Run price checker
      env:
        BOT_TOKEN: ${{ secrets.BOT_TOKEN }}
        CHAT_ID: ${{ secrets.CAT_ID }}
      run: python steel_scraper.py

    - name: Notify on failure
      if: failure()
      uses: actions/github-script@v6
      with:
        github-token: ${{ secrets.GITHUB_TOKEN }}
        script: |
          github.rest.issues.create({
            owner: context.repo.owner,
            repo: context.repo.repo,
            title: 'خطا در بررسی قیمت‌های آهن آلات',
            body: 'اجرای خودکار بررسی قیمت با خطا مواجه شد. لطفاً بررسی کنید.'
          })
